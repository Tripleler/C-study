@{
    ViewData["Title"] = "로그인";
}
@model User;


<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
            <div class="form-group">
                <label style="margin:10px 0px 5px;"> 사용자 ID</label> <!-- Models의 User의 UserId에 매칭시켜 값을 넘겨준다. -->
                <input type="text" class="form-control" asp-for="USER_ID" placeholder="사용자 ID 입력" />
                <!-- span 태그를 이용해 asp-validation-for 를 이용하면 값을 넣지 않을경우 경고문이 뜬다. -->
                <span class="text-danger" asp-validation-for="USER_ID"></span>
            </div>

            <div class="form-group">
                <label style="margin:10px 0px 5px;"> 사용자 비밀번호</label>
                <input type="password" class="form-control" asp-for="USER_PWD" placeholder="사용자 비밀번호 입력" />
                <span class="text-danger" asp-validation-for="USER_PWD"></span>
            </div>
@*
            <div class="form-group">
                <label style="margin:10px 0px 5px;"> 사용자 이름</label>
                <input type="text" class="form-control" asp-for="UserName" placeholder="사용자 이름 입력" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>*@

            <div class="form-group">
                <button style="margin:10px 0px" type="submit" class="btn btn-primary">로그인</button>
                <a class="btn btn-warning" asp-controller="Home" asp-action="index">취소</a>
            </div>
        </form>
    </div>
</div>