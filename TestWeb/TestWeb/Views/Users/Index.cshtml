@model IEnumerable<TestWeb.Models.Login>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Users" asp-action="Index" method="get">
    <p>
        USER_PWD: <input type="text" name = "id" />
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.USER_PWD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.USER_PWD)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.USER_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.USER_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.USER_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
