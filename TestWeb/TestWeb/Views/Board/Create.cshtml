@model TestWeb.Models.BoardSend

@{
    ViewData["Title"] = "Create";
}

<div style="border-style:solid; border-top:none; border-left:none; border-right:none; width:100%;">
    <h1>글쓰기</h1>
</div>


<hr/>
<div id="Create" class="row" style="width:100%;">
    <div style="width:100%; margin:5em;">
        <form id="createForm" asp-action="AddBoard" method="post" enctype="multipart/form-data">  @*enctype을 안적으면 파일이 전송이 안됨*@
            <div class="text-danger"></div>
            <div class="form-group">
                <input name="BoardTitle" class="form-control" placeholder="제목을 입력해 주십시오" style="font-size: 24px;"/>
            </div>
            <div id="fileArea" class="Container">
                <div id="dragDropArea">
                    <div class="drag-drop-inside">
                        <p class="drag-drop-info">여기에 파일을 드래그 앤드 드롭</p>
                        <p>또는</p>
                        <p class="drag-drop-buttons">
                            <label class="fileInputButton">
                                ＋ 첨부 파일 선택
                                <input name="Files" id="fileInput" style="display:none" type="file" multiple="multiple" onchange="fnSelectFile();" />
                                @*<input multiple="multiple" asp-for="Files" />*@
                            </label>
                        </p>
                        <div id="fileList" style="text-align:center;"></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea name="BoardContent" class="form-control" placeholder="내용을 입력하세요" style="resize:none; height:30em; font-size:16px;"></textarea>
            </div>
            <div class="form-group">
                @*<input type="button" value="등록" class="btn btn-primary" onclick="CreateBoard()" />*@
                @*<input type="button" value="등록" class="btn btn-primary" onclick="UploadFiles()" />*@
                <button class="btn btn-primary" onclick="CreateBoard()">등록</button>
                @*<button type="submit" class="btn btn-success">Upload Files</button>*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">목록으로</a>
</div>