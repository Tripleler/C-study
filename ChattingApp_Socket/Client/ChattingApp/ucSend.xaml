<UserControl x:Class="ChattingApp.ucSend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChattingApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50, 0, 0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txt_time" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10, 10, 10, 12"/>
        <Border x:Name="border" Grid.Column="1" CornerRadius="10" Background="LightGreen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 10, 10, 10">
            <TextBlock x:Name="txt_msg" TextWrapping="Wrap" Margin="10" FontSize="14"/>
        </Border>
    </Grid>
</UserControl>
