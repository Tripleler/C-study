<UserControl x:Class="ChattingApp.ucInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChattingApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="100, 10, 100, 10" BorderBrush="Transparent">
        <TextBlock x:Name="txt_msg" TextWrapping="Wrap" Margin="10" FontSize="14" TextAlignment="Center"/>
    </Border>
</UserControl>
