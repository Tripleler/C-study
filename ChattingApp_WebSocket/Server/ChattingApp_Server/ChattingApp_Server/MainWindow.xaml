<Window x:Class="ChattingApp_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingApp_Server"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800"
        Left="50" Top="50"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="txt_Status" Grid.Column="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto">

        </RichTextBox>
        <Button x:Name="btn_Switch" Grid.Column="1" Margin="30" Height="50" VerticalAlignment="Top" Click="btn_Switch_Click" Content="Start">
        </Button>
        <Button x:Name="btn_Check" Grid.Column="1" Margin="30, 100, 30, 30" Height="50" VerticalAlignment="Top" Click="btn_Check_Click" Content="Check">
        </Button>
    </Grid>
</Window>
